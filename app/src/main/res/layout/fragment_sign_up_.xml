<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e2ebf8"
    tools:context=".Activities.Auth.SignUp_Fragment">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="178dp"

        android:layout_height="168dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:fontFamily="@font/montserrat_medium"
        android:textStyle="bold"
        android:textColor="#212427"

        android:layout_marginTop="18dp"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"

        android:id="@+id/first_name"
        app:hintTextColor="#B3212427"
        android:textColorHint="#B3212427"
        app:helperText=""
        app:helperTextTextColor="#FB2A2A"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        android:layout_marginTop="15dp"
        android:hint="First Name"
        app:startIconTint="#212427"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/first_name_inp"
            android:textSize="16sp"
            android:textCursorDrawable="@color/black"
            android:lines="1"
            android:layout_width="match_parent"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_sing_in"
            android:inputType="text"
            android:textColor="#B3212427"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:id="@+id/last_name"
        app:hintTextColor="#212427"
        app:helperTextTextColor="#FB2A2A"
        android:textColorHint="#B3212427"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginTop="16dp"
        android:hint="Last Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:startIconTint="#212427"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/last_name_inp"
            android:layout_width="match_parent"
            android:textCursorDrawable="@color/black"
            android:layout_height="match_parent"
            android:background="@drawable/custom_sing_in"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"

            android:inputType="text"
            android:textColor="#212427"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:id="@+id/email_box"
        app:hintTextColor="#212427"
        android:textColorHint="#B3212427"
        android:layout_height="wrap_content"
        app:helperText=""
        app:helperTextTextColor="#FB2A2A"
        android:layout_marginHorizontal="20dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:layout_marginTop="16dp"
        android:hint="Email ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        app:startIconTint="#212427"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_inp"
            android:fontFamily="@font/montserrat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@color/black"
            android:textSize="16sp"

            android:lines="1"
            android:background="@drawable/custom_sing_in"
            android:inputType="textEmailAddress"
            android:textColor="#212427"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:id="@+id/password"
        app:hintTextColor="#212427"
        android:textColorHint="#B3212427"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:helperText=""
        app:helperTextTextColor="#FB2A2A"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:hint="Password"
        app:startIconDrawable="@drawable/lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#212427"
        app:startIconTint="#212427"
        app:layout_constraintTop_toBottomOf="@+id/email_box">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_form_inp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@color/black"
            android:lines="1"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/custom_sing_in"
            android:inputType="textPassword"
            android:textColor="#212427"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/custom_login_btn"
        android:onClick="signupotpVerificationFrag"
        android:textAllCaps="false"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_name" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_btn"
        android:layout_marginTop="0dp"
        android:id="@+id/layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#212427"
            android:text="Already Registered?  "
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn"
            android:textAlignment="textStart"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"

            style="?android:attr/borderlessButtonStyle"
            android:onClick="logInFrag"
            android:text="Login"
            android:textColor="#212427"
            android:textAllCaps="false"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:flow_horizontalAlign="center"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_interfactory_black" />

        <TextView
            android:id="@+id/Heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  INTERNFACTORY"
            android:textColor="#212427"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>